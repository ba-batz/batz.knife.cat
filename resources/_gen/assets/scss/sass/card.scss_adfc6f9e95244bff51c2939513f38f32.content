#card-grid{margin-top:3em;display:grid;grid-template-columns:repeat(auto-fill,minmax(20em,1fr))}.card{width:90%;aspect-ratio:5/6;border:#262626;position:relative;bottom:0;transition:.3s;margin-bottom:2em;margin-left:auto;margin-right:auto}.card:hover{box-shadow:0 8px 24px grey;bottom:.5em}.card:hover a h4{color:#ff355e}.card:hover a p{color:#000}.card img{width:100%;aspect-ratio:2/1.6;box-shadow:none}.card a{text-decoration:none}.card a h4{color:#000}.card a p{color:#343434}.card-text{margin-left:1em}