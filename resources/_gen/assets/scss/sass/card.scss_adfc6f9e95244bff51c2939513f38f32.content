#card-grid{margin-top:3em;display:grid;grid-template-columns:repeat(auto-fill,minmax(20em,1fr))}.card{width:90%;aspect-ratio:5/6;position:relative;bottom:0;transition:.3s;margin-bottom:2em;margin-left:auto;margin-right:auto}.card a{text-decoration:none;color:#f0f0f0}.card h4{margin-top:1em}.card p{margin-top:-1em}.card img{width:100%;aspect-ratio:2/1.6;box-shadow:none}.card:hover{box-shadow:0 10px 25px #09010d;bottom:.5em}.card:hover h4{color:#0ce6f2}.card:hover p{color:#f0f0f0}@media(max-width:800px){.card{box-shadow:0 10px 25px #09010d}}.card__text{margin:0 1em}