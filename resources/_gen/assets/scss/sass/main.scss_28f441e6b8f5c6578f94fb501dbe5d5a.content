::selection{background-color:#8f9bf6}html{color:#f0f0f0;background-color:#161616;font-family:fira sans,sans-serif}body{margin:.8em 1.5em}img{max-width:100%;width:700px;box-shadow:#09010d;display:block;margin-left:auto;margin-right:auto}h1{color:#0ce6f2;text-align:center}h2{color:#ff0546}h3{color:#ab4646}#content{max-width:1300px;margin-left:auto;margin-right:auto}nav{background-color:#450327;padding-bottom:.2em;padding-top:.2em;border-radius:.5em}nav ul{display:inline;color:#f0f0f0}nav li{display:inline;vertical-align:middle;margin-right:1em}nav a{text-decoration:none;font-size:x-large;font-weight:700;border-radius:.2em;padding:0 .2em;transition:.2s;color:#ff0546}nav a:hover{color:#f0f0f0}@media(max-width:800px){nav{text-align:center}nav li{display:inline-block}}#home-button{color:#0098db;font-weight:900;margin-right:-.5em}#home-button:hover{color:#0ce6f2}#secret{color:#450327;font-size:small;font-weight:400;float:right;margin-right:1em}#secret:hover{color:#0ce6f2}footer{margin-left:1em}#img-float-right{position:fixed;right:3em;top:6em;margin:0 5em;width:300px}@media(max-width:1300px){#img-float-right{display:none}}