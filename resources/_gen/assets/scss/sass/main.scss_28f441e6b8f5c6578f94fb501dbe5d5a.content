::selection{background-color:#de3163}html{color:#000;background-color:#fff;font-family:fira sans,sans-serif}body{margin:.8em 1.5em}img{max-width:100%;width:600px;box-shadow:4px 4px 10px #262626}h1{color:#ff467e;text-shadow:2px 2px #f1ddcf}h2{color:#6c9bcf;text-shadow:-1px 1px #334257}h3{color:#a4d0a4;text-shadow:1px -1px 1px #006400}#content{max-width:1300px;margin-left:auto;margin-right:auto}nav{background-color:#fad173;box-shadow:0 0 .5em #835d05;padding-bottom:.2em;padding-top:.2em;border-radius:.5em}nav ul{display:inline;color:#fff}nav li{display:inline;vertical-align:middle;margin-right:1em}nav a{text-decoration:none;font-size:x-large;font-weight:700;color:#262626;border-radius:.2em;padding:0 .2em;transition:.2s}nav a:hover{background-color:#fdebc2;color:#000}@media(max-width:700px){nav{text-align:center}nav li{display:inline-block}}#home-button{color:#e8002f;font-weight:900;margin-right:-.5em}#home-button:hover{color:#ff355e}#secret{color:#fde9bd;font-size:small;font-weight:400;float:right;margin-right:1em}#secret:hover{background-color:#ff355e}footer{margin-left:3em}#img-float-right{position:fixed;right:3em;top:6em;margin:0 5em;width:300px}@media(max-width:1300px){#img-float-right{display:none}}